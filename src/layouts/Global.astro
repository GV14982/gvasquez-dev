---
import "terminal.css";
interface Props {
  title: string;
  url: string;
  image?: string;
  ogType?: string;
  description?: string;
}

const { title, ogType, image, url, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:type" content={ogType ?? "website"} />
    <meta
      property="og:image"
      content={image ?? "https://gvasquez.dev/og-image.png"}
    />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description ?? "My little slice of the internet :)"}
    />
    <slot name="og-props" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
